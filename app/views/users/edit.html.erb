<div class="container">
  <div class="row">
    <div class="col-sm-3">
    	<h1>User info</h1>
        <%= form_for(@user) do |f| %>
		            <p>Name</P>
		            <%= f.text_field :name %>
                <p>Image</p>
                <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
		            <p>Introduction</p>
		            <%= f.text_field :introduction %>
                <%= f.submit "Update User" %>
        <% end %>
      <div class="col-sm-3"></div>
    </div>
  </div>
</div>
