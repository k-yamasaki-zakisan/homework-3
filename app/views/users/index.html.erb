<div class="container">
  <div class="row">
    <div class="col-sm-3">
    	<h2>User info</h2>

    	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>

    	<table class="table">
		    <thead>
		        <tr>
		            <th>name</th>
		            <th><%= @user.name %></th>
		        </tr>
		    </thead>
		    <tbody>
		        <tr>
		            <th>introduction</th>
		            <td><%= @user.introduction %></td>
		        </tr>
		    </tbody>
		  </table>
		  <% if @user.id == current_user.id %>
        <p><%= link_to "", edit_user_path(@user),class: "btn btn-default  btn-block glyphicon glyphicon-wrench" %></p>
      <% end %>

      <h3>New book</h3>
      <%= form_for(@book) do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <div><%= f.submit 'Create Book', :class=>"btn btn-primary  btn-block" %></div>
      <% end %>
    </div>
    <div class="col-sm-9">
    	<h2>Users</h2>
      <table class="table">
        <thead>
            <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
                <th></th>                
            </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
                <th><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></th>
                <th><%= user.name %></th>
                <th></th>
                <th><%= link_to "show", user_path(user) %></th>
            </tr>
          <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>

